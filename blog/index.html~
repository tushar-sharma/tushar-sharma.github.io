  </a>
  {% assign truncated_post = post.content | split:"<!-- truncate_here -->" | first %}
  {% if truncated_post != post.content %}
  {{ truncated_post | append:".."}}
  <a href="{{ post.url }}">
    <p>Continue reading &rarr;</p>
  </a>
  {% else %}
   {{ post.content }}
  {% endif %}
  {% if post != blogposts.last %}
    <hr />
  {% endif %}
{% endfor %}
